server {
    listen 80;

    root /usr/share/nginx/html;
    index index.html index.htm;

    server_name localhost;

    location / {
        try_files $uri $uri/ /index.html;  # Ensures fallback to index.html for React Router
    }

    error_page 404 /index.html;

    location = /50x.html {
        root /usr/share/nginx/html;
    }
}
